<section class="content">
  <div class="row">
    <% campuses.forEach(c => { %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-geo"></i> <%= c.name %></h5>
            <a class="btn btn-primary btn-sm" href="/campuses/<%= c._id %>/buildings" style="margin-left: auto;">Xem tòa nhà</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
