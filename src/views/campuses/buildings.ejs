<section class="content">
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/campuses">Cơ sở</a></li>
      <li class="breadcrumb-item active"><%= campus.name %></li>
    </ol>
  </nav>
  <div class="row">
    <% buildings.forEach(b => { %>
      <div class="col-md-4">
        <div class="card" style="margin-bottom: 15px;">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="bi bi-building"></i> <%= b.name %></h6>
            <a class="btn btn-outline-primary btn-sm"
               href="/campuses/<%= campus._id %>/buildings/<%= b._id %>/floors" style="margin-left: auto; ">Xem tầng</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
