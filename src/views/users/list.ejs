<section class="content">
  <div class="card">
    <div class="card-header d-flex justify-content-between">
      <h3 class="card-title"><b>Quản lý tài khoản</b></h3>
      <a href="/users/create" class="btn btn-primary btn-sm" style="margin-left: auto;">Thêm</a>
    </div>
    <div class="card-body p-0">
      <table class="table mb-0">
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Role</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><span class="badge bg-secondary"><%= u.role %></span></td>
              <td class="text-end">
                <a href="/users/<%= u._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                <form action="/users/<%= u._id %>/delete" method="post" class="d-inline">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('Xóa?')">Xóa</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
